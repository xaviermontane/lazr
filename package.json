{
  "name": "lazr-discord-bot",
  "version": "1.0.0",
  "description": "A fully-modular Discord bot.",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "docker:build": "docker build -t lazr-bot .",
    "docker:build:prod": "docker build -f Dockerfile.prod -t lazr-bot:prod .",
    "docker:run": "docker run --rm --env-file .env -u $(id -u):$(id -g) -v $(pwd):/app lazr-bot",
    "docker:run:prod": "docker run --rm --env-file .env lazr-bot:prod",
    "docker:run:secure": "docker run --rm -e BOT_TOKEN -e NODE_ENV lazr-bot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f discord-bot",
    "docker:compose:restart": "docker-compose restart discord-bot",
    "lint": "eslint .",
    "test": "node test-runner.js",
    "test:ci": "node test-runner.js"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "docker",
    "modular"
  ],
  "author": "F40",
  "license": "GPL-3.0-only",
  "dependencies": {
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.36.0",
    "globals": "^16.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xaviermontane/lazr.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/xaviermontane/lazr/issues"
  },
  "homepage": "https://github.com/xaviermontane/lazr#readme"
}
